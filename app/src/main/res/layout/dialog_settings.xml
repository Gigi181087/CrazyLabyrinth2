<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp">


            <TextView
                android:id="@+id/playerNameImageView"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:background="@drawable/text_roundededges"
                android:fontFamily="@font/gamefont"
                android:padding="15dp"
                android:text="NAME"
                android:textColor="#FFFF00"
                android:textSize="20sp"
                android:layout_alignParentStart="true"/>


            <EditText
                android:id="@+id/playerNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginRight="50dp"
                android:background="@drawable/text_roundededges"
                android:fontFamily="@font/gamefont"
                android:padding="15dp"
                android:text="PLAYER"
                android:textColor="#FFFF00"
                android:textSize="20sp"
                android:layout_alignParentEnd="true"/>


    </RelativeLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ipTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="127.0.0.1"
            android:layout_gravity="center"
            android:background="@drawable/text_roundededges"
            android:fontFamily="@font/gamefont"
            android:textSize="20sp"
            android:textColor="#FFFF00"
            android:layout_marginBottom="15dp"
            android:layout_alignParentStart="true"

            android:padding="15dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp">
            <Button
                android:id="@+id/connectImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONNECT"
                android:layout_gravity="center"
                android:background="@drawable/text_roundededges"
                android:fontFamily="@font/gamefont"
                android:textSize="15sp"
                android:textColor="#FFFF00"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="50dp"
                android:padding="15dp"/>

            <Button
                android:id="@+id/soundImageButton"
                android:text="REMOTE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/text_roundededges"
                android:fontFamily="@font/gamefont"
                android:textSize="15sp"
                android:textColor="#FFFF00"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="50dp"
                android:padding="15dp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/vibrateImageButton"
            android:text="SOUND OFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/text_roundededges"
            android:fontFamily="@font/gamefont"
            android:textSize="15sp"
            android:textColor="#FFFF00"
            android:layout_marginBottom="25dp"
            android:padding="15dp"/>

        <Button
            android:id="@+id/closeImageButton"
            android:text="VIBRATE OFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/text_roundededges"
            android:fontFamily="@font/gamefont"
            android:textSize="15sp"
            android:textColor="#FFFF00"
            android:layout_marginBottom="50dp"
            android:layout_alignParentEnd="true"
            android:padding="15dp"/>


    </LinearLayout>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="CLOSE"
    android:layout_gravity="center"
    android:background="@drawable/text_roundededges"
    android:fontFamily="@font/gamefont"
    android:textSize="15sp"
    android:textColor="#FFFF00"/>



</LinearLayout>